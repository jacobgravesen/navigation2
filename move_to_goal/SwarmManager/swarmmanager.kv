<MainMenuOptionInitializeSwarm>:
    name: 'initializeswarm'
    orientation: "vertical"

    TopButtonsSpace:
        size_hint: 1, .1
        HLButton:
            size_hint: 1, 1
            color: 0.85,0.85,0.85,1
            text: 'Back'
            background_color:  	0.129, 0.129, 0.133, 1
            on_press: root.manager.current = 'mainmenu'
            background_normal: ''
        HLButton:
            size_hint: 1, 1
            color: 0.85,0.85,0.85,1
            text: 'Set Initial Poses'
            background_color:  	0.129, 0.129, 0.133, 1
            on_press: root.set_initial_poses_threaded()
            background_normal: ''
